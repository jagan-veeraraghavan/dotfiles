set completion-hover-css=color:#d3d0c8;background-color:#393939;font:12pt ShureTechMono Nerd Font Mono;
set completion-selected-css=color:#d3d0c8;background-color:#515151;font:12pt ShureTechMono Nerd Font Mono;
